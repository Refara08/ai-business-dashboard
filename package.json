{
  "name": "ai-business-dashboard",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace=frontend run dev\" \"npm --workspace=backend run start:dev\"",
    "dev:frontend": "npm --workspace=frontend run dev",
    "dev:backend": "npm --workspace=backend run start:dev",
    "build": "npm --workspace=frontend run build && npm --workspace=backend run build",
    "start:prod": "npm --workspace=backend run start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
